<!DOCTYPE html>
<html lang="es-do">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Academic XXI</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-2.2.3.js"></script>
    <script>
        (function ($) {
            $(window).load(function () {
                $("#status").fadeOut("slow");
                $("#preloader").delay(500).fadeOut("slow").remove();
            })
        })(jQuery);
    </script>
    @RenderSection("css",false)
        @*
            @Styles.Render("~/Content/css")
            @Scripts.Render("~/bundles/modernizr")
        *@

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div id='preloader'>
        <div id='status'>
            
            <img src="~/Content/images/loading.gif" alt="Loader" height="60" width="60" />
        </div>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">

                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Academic XXI {Beta}", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="javascript:alert('Academic XXI {Beta}');">Inicio</a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Estudiante <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Nuevo", "Create", "Student")</li>
                            <li>@Html.ActionLink("Mantenimiento", "Maintenance", "Student")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Gestión Académica <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Plan de Estudio", "Maintenance", "StudyPlan")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Semestres Académico", "Maintenance", "Semester")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Actas <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Crear Acta", "CreateRecord", "Record")</li>
                            <li>@Html.ActionLink("Consultar Acta", "ConsultRecord", "Record")</li>
                            <li>@Html.ActionLink("Asociar Est. a Acta", "AddStudentToRecord", "Record")</li>
                            <li>@Html.ActionLink("Mantenimiento de Actas", "RecordMaintenance", "Record")</li>
                        </ul>
                    </li>
                </ul>
                <!--<ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Built With Bootstrap</a></li>
                    <li><a href="#">WrapBootstrap</a></li>
                </ul>-->
            </div>
        </div>
    </div>



    <div class="container" style="margin-top:30px">
        @Html.Partial("_PartialAlertView")
        
        @RenderBody()

        <footer>
            <p>&copy; @DateTime.Now.Year - Academic XXI</p>
        </footer>
    </div>




    <!-- Scripts-->
    
    <script src="~/Scripts/bootstrap.js"></script>
    @*
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    *@
    @RenderSection("scripts", false)
</body>
</html>