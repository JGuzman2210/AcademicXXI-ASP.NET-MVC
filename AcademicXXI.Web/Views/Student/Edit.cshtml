@model AcademicXXI.ViewModel.ViewModel.StudentViewModel

@{
    ViewBag.Title = $"{Model.FullName}";
}

@using (Html.BeginForm("Edit", "Student", FormMethod.Post, new { @id = "frmEdit" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RegisterNumber)
    <div class="col-lg-8">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Editando Estudiante</h3>
                </div>
                <div class="panel-body">
                    <div class="input-group form-group">
                        @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = "Ingrese nombre" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "label label-danger" })

                    </div>
                    <div class="input-group form-group">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese apellido(s)" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "label label-danger" })
                    </div>
                    <div class="input-group form-group">
                        @Html.LabelFor(model => model.DocumentID, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.EditorFor(model => model.DocumentID, new { htmlAttributes = new { @class = "form-control",@readonly = true } })
                        @Html.ValidationMessageFor(model => model.DocumentID, "", new { @class = "label label-danger" })
                    </div>
                    <div class="input-group form-group">
                        @Html.LabelFor(model => model.RegisterNumber, htmlAttributes: new { @class = "control-label input-group-addon" })
                        @Html.EditorFor(model => model.RegisterNumber, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                        @Html.ValidationMessageFor(model => model.RegisterNumber, "", new { @class = "label label-danger" })
                    </div>
                </div>
                <div class="panel-footer text-right">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <input type="button" value="Eliminar" class="btn btn-danger" />
                    @Html.ActionLink("Cancelar", "Index", "Student", null, new { @class = "btn btn-warning" })
                </div>
            </div>
        </div>
    </div>


}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
