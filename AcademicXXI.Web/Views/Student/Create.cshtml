@model AcademicXXI.ViewModel.ViewModel.StudentViewModel

@{
    ViewBag.Title = "Nuevo estudiante";
}
<div class="col-lg-8">
    <div class="row">
        @using (Html.BeginForm())
        {
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Nuevo Estudiante</h3>
            </div>
            <div class="panel-body">
            
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control",placeholder="Ingrese nombre" })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "label label-danger" })

                </div>
                <div class="form-group">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese apellido(s)" } })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "label label-danger" })
                    </div>
                <div class="form-group">
                        @Html.LabelFor(model => model.DocumentID, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.DocumentID, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Cedula Sin Guiones" } })
                        @Html.ValidationMessageFor(model => model.DocumentID, "", new { @class = "label label-danger"})
                    </div>
                <div class="form-group">
                        @Html.LabelFor(model => model.RegisterNumber, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.RegisterNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese Matrícula" } })
                        @Html.ValidationMessageFor(model => model.RegisterNumber, "", new { @class = "label label-danger" })
                    </div>
            </div>
            <div class="panel-footer text-right">
                <input type="submit" value="Registrar" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "Index", "Student", null, new { @class = "btn btn-danger" })
            </div>
        </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
