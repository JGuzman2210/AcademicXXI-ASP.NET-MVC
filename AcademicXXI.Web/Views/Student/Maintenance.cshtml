@model IEnumerable<AcademicXXI.ViewModel.ViewModel.StudentViewModel>

@{
    ViewBag.Title = "Estudiantes";
}


<h2>Listado de estudiantes</h2>
<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-3">
                <div class="input-group">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-search"></span>
                    </div>
                    <input type="search" class="form-control" id="search" name="search" placeholder="Buscar estudiante">
                </div>
            </div>
            <div class="col-md-9">
                <input type="button" value="Buscar" class="btn btn-success" />
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DocumentID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegisterNumber)
                </th>

                <th></th>
            </tr>

            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RegisterNumber)
                        </td>

                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                            @Html.ActionLink("Detalles", "Details", new { id=item.Id })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4">
                        No hay registro a mostrar.
                    </td>

                </tr>
            }
        </table>

    </div>
</div>